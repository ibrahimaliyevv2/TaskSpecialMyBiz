@model List<Position>
@{
    int count = 0;
}


<div class="container">
    <div class="row">

        <div class="col-md-10 mx-auto">
            <a asp-action="create" class="btn btn-primary mt-2">Create New</a>
        </div>s
        <div class="col-md-10 mx-auto">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">No:</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Position psn in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@psn.Name</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@psn.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="delete" asp-route-id="@psn.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

